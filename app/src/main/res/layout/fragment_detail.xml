<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/Detail_Title_Edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Title" />

    <EditText
        android:id="@+id/Detail_Content_Edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Detail_Title_Edt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Content" />

    <TextView
        android:id="@+id/Detail_Location_Edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Detail_Content_Edt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Content" />

    <Button
        android:id="@+id/Detail_Location_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Detail_Location_Edt"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Locate" />

    <CalendarView
        android:id="@+id/Detail_calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Detail_Location_Btn"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <CheckBox
        android:id="@+id/Detail_Isfinish_Cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Detail_calendarView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Finished" />

    <Button
        android:id="@+id/Detail_Save_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Detail_Isfinish_Cb"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Save" />

    <Button
        android:id="@+id/Detail_Cancel_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Detail_Save_Btn"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Cancel" />

</RelativeLayout>
