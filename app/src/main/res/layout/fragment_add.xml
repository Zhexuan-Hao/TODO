<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/Add_Name"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:inputType="none"
            android:hint=""
            android:background="@null" />

        <LinearLayout
            android:id="@+id/Add_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:layout_below="@id/Add_Name">

            <TextView
                android:id="@+id/Add_Title_Tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Title:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="gravity"
                android:gravity="right|center_vertical" />

            <EditText
                android:id="@+id/Add_Title_Edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:hint="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Add_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/Add_Title">

            <TextView
                android:id="@+id/Add_Content_Tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Content:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="gravity"
                android:gravity="right|center_vertical" />

            <EditText
                android:id="@+id/Add_Content_Edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:hint="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Add_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/Add_Content">

            <TextView
                android:id="@+id/Add_Loaction_Tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Address:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="gravity"
                android:gravity="right|center_vertical" />

            <EditText
                android:id="@+id/Add_Location_Edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Add_Weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/Add_Location">

            <TextView
                android:id="@+id/Add_Temperature_Tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Temp:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="gravity"
                android:gravity="right|center_vertical" />

            <EditText
                android:id="@+id/Add_Temperature_Edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="" />

            <TextView
                android:id="@+id/Add_Weather_Tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Weather:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="gravity"
                android:gravity="right|center_vertical" />

            <EditText
                android:id="@+id/Add_Weather_Edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="" />


        </LinearLayout>

